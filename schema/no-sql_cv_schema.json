{
  "$id": "https://raw.githubusercontent.com/D3TaLES/databases_demo/main/no-sql/schema/no-sql_cv_schema.json",
  "title": "cv_schema",
  "description": "Schema for CV data",
  "type": "object",
  "properties": {
          "date_recorded": {
            "description": "Date and time CV data was collected",
            "type": "string"
          },
          "working_electrode": {
            "description": "Working electrode used",
            "type": "string"
          },
          "counter_electrode": {
            "description": "Counter electrode used",
            "type": "string"
          },
          "reference_electrode": {
            "description": "Reference electrode used",
            "type": "string"
          },
          "solvent": {
            "description": "Solvent used in experiment. Contains a dictionary with properties `name` and `purity`",
            "type": "string"
          },
          "electrolyte": {
            "description": "Electrolyte used in experiment. Contains a dictionary with properties `name` and `purity`",
            "type": "string"
          },
          "ionic_liquid": {
            "description": "Ionic liquid used in experiment. Contains a dictionary with properties `name` and `purity`",
            "type": "string"
          },
          "instrument": {
            "description": "Instrument used",
            "type": "string"
          },
          "scan_rate": {
            "description": "Rate of change in potential (V) per second",
            "type": "number"
          },
          "num_scans": {
            "description": "Number of CV scans",
            "type": "number"
          },
          "working_electrode_surface_area": {
            "description": "Surface area of the working electrode. Unit: cm^2",
            "type": "number"
          },
          "redox_mol_concentration": {
            "description": "Concentration of redox molecule being measured. Unit: M",
            "type": "number"
          },
          "quiet_time": {
            "description": "Quiet time in seconds",
            "type": "number"
          },
          "sensitivity": {
            "description": "Sensitivity in A/V",
            "type": "number"
          },
          "comp_r": {
            "description": "Comparative resistance (ohm)",
            "type": "number"
          },
          "scan_data": {
            "description": "List of scans",
            "type": "array",
            "items": {
              "description": "List of data points in each scan",
              "type": "array",
              "items": {
                "description": "Individual data points: Potential/V, Current/A",
                "type": "array",
                "items": {
                  "type": "number"
                },
                "minItems": 2
              }
            }
          }
        }
}



